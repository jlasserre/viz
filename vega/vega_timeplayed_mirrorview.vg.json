{
  "$schema": "https://vega.github.io/schema/vega/v3.json",
  "height": 2000,
  "padding": 5,
  "signals": [
    { 
      "name": "chartWidth",
      "value": 300
    },
    {
      "name": "datePadding",
      "value": 80
    },
    {
      "name": "width",
      "update": "2 * chartWidth + datePadding"
    },
    {
      "name": "dailyTimeRange",
      "value": 1000
    },
    {
      "name": "includeFury",
      "bind": {
        "input": "checkbox"
      }
    }
  ],
  "data": [
    {
      "name": "reports",
      "url": "https://docs.google.com/spreadsheets/d/e/2PACX-1vQDBEJKDMsKNq6hPDTRX6M4zGrAPCkBCuio7MCk3TInN5QYY1vYukxC6nVcgkoeXx542Khal32ZIIHF/pub?output=csv",
      "format": {
        "type": "csv",
        "parse": {
          "numDistinctCrashIssues": "number",
          "numOccurrences": "number",
          "targetMTBC": "number",
          "totalPlaytime": "number"
        }
      },
      "transform": [
        {
          "type": "formula",
          "as": "shortDate",
          "expr": "monthAbbrevFormat(utcmonth(datum.date)) + ' ' + utcdate(datum.date) + ' ' + utcyear(datum.date)"
        },
        {
          "type": "formula",
          "as": "totalHoursPlayed",
          "expr": "floor(datum.totalPlaytime / 60, 1)"
        },
        {
          "type": "formula",
          "as": "targetMTBC_hour",
          "expr": "floor(datum.targetMTBC / 60, 1)"
        }
      ]
    },
    {
      "name": "aggregatedReports",
      "source": "reports",
      "transform": [
        {
          "type": "filter",
          "expr": "includeFury || datum.isFury == 'FALSE'"
        },
        {
          "type": "aggregate",
          "groupby": [
            "date",
            "branch",
            "shortDate"
          ],
          "fields": [
            "buildVersion",
            "numDistinctCrashIssues",
            "numOccurrences",
            "targetMTBC",
            "targetMTBC_hour",
            "totalHoursPlayed",
            "totalPlaytime"
          ],
          "ops": [
            "min",
            "sum",
            "sum",
            "max",
            "max",
            "sum",
            "sum"
          ],
          "as": [
            "buildVersion",
            "numDistinctCrashIssues",
            "numOccurrences",
            "targetMTBC",
            "targetMTBC_hour",
            "totalHoursPlayed",
            "totalPlaytime"
          ]
        }
      ]
    },
    {
      "name": "reports_TU",
      "source": "aggregatedReports",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.branch == 'TU'"
        }
      ]
    },
    {
      "name": "reports_MAIN",
      "source": "aggregatedReports",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.branch == 'MAIN'"
        }
      ]
    },
    {
      "name": "reports_combined",
      "source": [
        "reports_TU",
        "reports_MAIN"
      ] 
    },
    {
      "name": "dates",
      "source": "reports",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "date",
            "shortDate"
          ],
          "fields": [
            "numDistinctCrashIssues",
            "numOccurrences",
            "totalHoursPlayed",
            "totalPlaytime"
          ],
          "ops": [
            "sum",
            "sum",
            "sum",
            "sum"
          ],
          "as": [
            "totalDistinctCrashIssues",
            "totalOccurrences",
            "totalHoursPlayed",
            "totalPlaytime"
          ]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "yDates",
      "type": "band",
      "range": [
        0,
        {
          "signal": "height"
        }
      ],
      "domain": {
        "data": "dates",
        "field": "shortDate"
      }
    },
    {
      "name": "x_TU",
      "type": "linear",
      "range": [
        {
          "signal": "chartWidth + 0.5 * datePadding"
        },
        {
          "signal": "datePadding"
        }
      ],
      "nice": true,
      "zero": true,
      "domain": [
        0,
        {
          "signal": "dailyTimeRange"
        }
      ]
    },
    {
      "name": "x_MAIN",
      "type": "linear",
      "range": [
        {
          "signal": "0.5 * datePadding"
        },
        {
          "signal": "chartWidth"
        }
      ],
      "nice": true,
      "zero": true,
      "domain": [
        0,
        {
          "signal": "dailyTimeRange"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "date text",
      "type": "text",
      "interactive": false,
      "from": {
        "data": "dates"
      },
      "encode": {
        "update": {
          "x": {
            "value": 0
          },
          "y": {
            "scale": "yDates",
            "field": "shortDate",
            "band": 0.5
          },
          "text": {
            "field": "shortDate"
          },
          "baseline": {
            "value": "middle"
          },
          "align": {
            "value": "center"
          },
          "fill": {
            "value": "#000"
          }
        }
      }
    },
    {
      "type": "group",
      "name": "TU",
      "encode": {
        "update": {
          "x": {
            "value": 0
          },
          "height": {
            "signal": "height"
          }
        }
      },
      "axes": [
        {
          "orient": "bottom",
          "scale": "x_TU",
          "format": "s"
        }
      ],
      "marks": [
        {
          "type": "rect",
          "from": {
            "data": "reports_TU"
          },
          "encode": {
            "update": {
              "x": {
                "scale": "x_TU",
                "field": "totalHoursPlayed"
              },
              "x2": {
                "scale": "x_TU",
                "value": 1
              },
              "y": {
                "scale": "yDates",
                "field": "shortDate"
              },
              "height": {
                "scale": "yDates",
                "band": 0.5
              },
              "fillOpacity": {
                "value": 0.6
              },
              "fill": {
                "value": "blue"
              }
            }
          }
        },
        {
          "name": "targetMTBC TU",
          "type": "rect",
          "from": {
            "data": "reports_TU"
          },
          "encode": {
            "update": {
              "x": {
                "scale": "x_TU",
                "field": "targetMTBC_hour"
              },
              "x2": {
                "scale": "x_TU",
                "value": 1
              },
              "y": {
                "scale": "yDates",
                "field": "shortDate",
                "offset": -2
              },
              "height": {
                "scale": "yDates",
                "band": 0.8
              },
              "opacity": {
                "value": 0.5
              },
              "fill": {
                "value": "red"
              }
            }
          }
        },
        {
          "type": "text",
          "interactive": false,
          "from": {
            "data": "reports_TU"
          },
          "encode": {
            "update": {
              "x": {
                "scale": "x_TU",
                "field": "totalHoursPlayed",
                "offset": -2
              },
              "y": {
                "scale": "yDates",
                "field": "shortDate",
                "band": 0.55
              },
              "text": {
                "field": "totalHoursPlayed"
              },
              "baseline": {
                "value": "bottom"
              },
              "align": {
                "value": "right"
              },
              "fill": {
                "value": "black"
              }
            }
          }
        }
      ]
    },
    {
      "type": "group",
      "name": "MAIN",
      "encode": {
        "update": {
          "x": {
            "signal": "chartWidth"
          },
          "height": {
            "signal": "height"
          }
        }
      },
      "axes": [
        {
          "orient": "bottom",
          "scale": "x_MAIN",
          "format": "s"
        }
      ],
      "marks": [
        {
          "type": "rect",
          "from": {
            "data": "reports_MAIN"
          },
          "encode": {
            "update": {
              "x": {
                "scale": "x_MAIN",
                "field": "totalHoursPlayed"
              },
              "x2": {
                "scale": "x_MAIN",
                "value": 1
              },
              "y": {
                "scale": "yDates",
                "field": "shortDate"
              },
              "height": {
                "scale": "yDates",
                "band":0.5
              },
              "fillOpacity": {
                "value": 0.6
              },
              "fill": {
                "value": "blue"
              }
            }
          }
        },
        {
          "name": "targetMTBC MAIN",
          "type": "rect",
          "from": {
            "data": "reports_MAIN"
          },
          "encode": {
            "update": {
              "x": {
                "scale": "x_MAIN",
                "field": "targetMTBC_hour"
              },
              "x2": {
                "scale": "x_MAIN",
                "value": 1
              },
              "y": {
                "scale": "yDates",
                "field": "shortDate",
                "offset":{
                  "value": -2
                }
              },
              "height": {
                "scale": "yDates",
                "band": 0.8
              },
              "opacity": {
                "value": 0.6
              },
              "fill": {
                "value": "red"
              }
            }
          }
        },
        {
          "type": "text",
          "interactive": false,
          "from": {
            "data": "reports_MAIN"
          },
          "encode": {
            "update": {
              "x": {
                "scale": "x_MAIN",
                "field": "totalHoursPlayed",
                "offset": 2
              },
              "y": {
                "scale": "yDates",
                "field": "shortDate",
                "band": 0.55
              },
              "text": {
                "field": "totalHoursPlayed"
              },
              "baseline": {
                "value": "bottom"
              },
              "align": {
                "value": "left"
              },
              "fill": {
                "value": "black"
              }
            }
          }
        }
      ]
    }
  ]
}